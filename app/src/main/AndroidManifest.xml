<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esei.mgrivas.polenalert" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.esei.mgrivas.polenalert.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="com.example.mark.smi.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Permissions to can use the GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Support.GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Needed for google maps -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Main activity -->
        <activity
            android:name=".controllers.MainController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.NewTrackController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name"
            android:parentActivityName=".controllers.MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.NewTrackController" />
        </activity>
        <activity
            android:name=".controllers.GpsController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name"
            android:parentActivityName=".controllers.NewTrackController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.ListController"
            android:label="@string/app_name"
            android:parentActivityName=".controllers.MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.PollenMapController"
            android:label="Mapa"
            android:parentActivityName=".controllers.MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCSdndvwfByswyzuQTWXvI4puC5_e3WQ0o" />

        <activity
            android:name=".controllers.FinalTrackController"
            android:label="@string/title_activity_final_track"
            android:parentActivityName="com.esei.mgrivas.polenalert.controllers.GpsController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.ObserverListController"
            android:label="@string/title_activity_observer"
            android:parentActivityName=".controllers.MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.DetailedController"
            android:label="@string/title_activity_detailed_list"
            android:parentActivityName=".controllers.ListController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.ObserverMode"
            android:label="@string/title_activity_observer_mode"
            android:parentActivityName=".controllers.ObserverListController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
        <activity
            android:name=".controllers.ManualController"
            android:label="@string/title_activity_manual_controller"
            android:parentActivityName=".controllers.MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainController" />
        </activity>
    </application>

</manifest>
