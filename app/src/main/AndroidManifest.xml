<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mark.smi" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.example.mark.smi.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!--
         Se requerirÃ¡ una etiqueda <uses-feature android:name="" android:required="" para el uso de
        Distintos servicios, como puede ser sms o el gps
    -->

    <uses-permission android:name="com.example.mark.smi.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Permissions to can use the GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Needed for google maps -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Main activity -->
        <activity
            android:name=".MainController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTrackController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name"
            android:parentActivityName=".MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewTrackController" />
        </activity>
        <activity
            android:name=".GoogleController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name"
            android:parentActivityName=".NewTrackController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GoogleController" />
        </activity>
        <activity
            android:name=".GpsController"
            android:configChanges="locale|orientation"
            android:label="@string/app_name"
            android:parentActivityName=".NewTrackController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName=".MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".ShowMapActivity"
            android:label="Mapa"
            android:parentActivityName=".MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCSdndvwfByswyzuQTWXvI4puC5_e3WQ0o" />

        <activity
            android:name=".FinalTrackController"
            android:label="@string/title_activity_final_track"
            android:parentActivityName=".GoogleController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".Observer"
            android:label="@string/title_activity_observer"
            android:parentActivityName=".MainController" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".DetailedList"
            android:label="@string/title_activity_detailed_list"
            android:parentActivityName=".ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".ObserverMode"
            android:label="@string/title_activity_observer_mode"
            android:parentActivityName=".Observer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainController" />
        </activity>
        <activity
            android:name=".GetFile"
            android:label="@string/title_activity_get_file" >
        </activity>
    </application>

</manifest>
